<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Issues</title>
  <style>
    body{font-family:Arial,Helvetica,sans-serif;background:#f7f9fb;color:#222}
    .container{max-width:1000px;margin:36px auto;padding:20px}
    .header{display:flex;justify-content:space-between;align-items:center}
    .btn{background:#007bff;color:#fff;padding:8px 12px;border-radius:6px;text-decoration:none}
    .stats{display:flex;gap:12px;margin-top:12px}
    .card{background:#fff;padding:12px;border-radius:8px;border:1px solid #e6edf3}
    .list{margin-top:20px}
    .issue{background:#fff;border:1px solid #e6edf3;padding:12px;border-radius:6px;margin-bottom:10px;display:flex;justify-content:space-between;align-items:center}
    .meta{color:#666;font-size:0.9rem}
    a.view{background:#28a745;color:#fff;padding:6px 10px;border-radius:6px;text-decoration:none}
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Issues</h1>
      <div>
        <a class="btn" href="/issues/new">Report Issue</a>
      </div>
    </div>

    <div class="stats">
      <div class="card">Total: <strong><%= typeof issues !== 'undefined' ? issues.length : 0 %></strong></div>
      <div class="card">Pending: <strong><%= (issues || []).filter(i=>i.status==='pending').length %></strong></div>
      <div class="card">In Progress: <strong><%= (issues || []).filter(i=>i.status==='in_progress').length %></strong></div>
      <div class="card">Resolved: <strong><%= (issues || []).filter(i=>i.status==='resolved').length %></strong></div>
    </div>

    <div class="list">
      <% if(!issues || issues.length === 0) { %>
        <p>No issues reported yet. Be the first to <a href="/issues/new">report an issue</a>.</p>
      <% } else { %>
        <% issues.forEach(function(issue){ %>
          <div class="issue">
            <div>
              <div><strong><a href="/issues/<%= issue._id %>"><%= issue.title %></a></strong></div>
              <div class="meta">Category: <%= issue.category %> • Severity: <%= issue.severity %> • <%= new Date(issue.createdAt).toLocaleString() %></div>
            </div>
            <div style="text-align:right">
              <div class="meta">Status: <strong><%= issue.status %></strong></div>
              <a class="view" href="/issues/<%= issue._id %>">View</a>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>
</body>
</html>
