<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Report Issue - CivicOne</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #f5f7fa; padding: 30px; }
    .container { max-width: 820px; margin: 0 auto; }
    .card { background: #fff; padding: 28px; border-radius: 12px; box-shadow: 0 6px 24px rgba(0,0,0,0.06); }
    h1 { margin-bottom: 12px; color: #222; }
    .form-group { margin-bottom: 16px; }
    label { display:block; margin-bottom:6px; color:#444; font-weight:600; }
    input[type="text"], textarea, select, input[type="file"] {
      width:100%; padding:12px 14px; border-radius:8px; border:1px solid #e0e0e0; font-size:1rem;
    }
    textarea { min-height:120px; resize: vertical; }
    .row { display:grid; grid-template-columns:1fr 1fr; gap:12px; }
    .btn { display:inline-block; padding:14px 18px; background: linear-gradient(135deg,#667eea,#764ba2); color:white; border-radius:10px; border:none; cursor:pointer; font-weight:700; text-decoration:none; text-align:center; }
    .btn.secondary { background:#6c757d; }
    .helper { font-size:0.9rem; color:#666; margin-top:6px; }
    .error { color: #b00020; margin-bottom:12px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <h1>Report a New Issue</h1>
      <p class="helper">Help improve your community ‚Äî fields marked * are required.</p>

      <% if (error) { %>
        <div class="error"><%= error %></div>
      <% } %>

      <form action="/issues" method="POST" enctype="multipart/form-data">
        <!-- Hidden User ID (from server; pass ?id=<userId> when testing) -->
        <% if (user && user._id) { %>
          <input type="hidden" name="userId" value="<%= user._id %>">
        <% } else { %>
          <!-- If user missing, leave empty so server shows helpful error -->
          <input type="hidden" name="userId" value="">
          <p class="helper" style="color:#b00">No user detected. For testing add ?id=&lt;userId&gt; to the URL or seed a user.</p>
        <% } %>

        <div class="form-group">
          <label for="title">Issue Title *</label>
          <input id="title" name="title" required minlength="5" maxlength="100" value="<%= formData.title || '' %>">
        </div>

        <div class="form-group">
          <label for="description">Detailed Description *</label>
          <textarea id="description" name="description" required minlength="10" maxlength="1000"><%= formData.description || '' %></textarea>
        </div>

        <div class="row">
          <div class="form-group">
            <label for="category">Category *</label>
            <select id="category" name="category" required>
              <option value="">Select category</option>
              <option value="pothole" <%= formData.category === 'pothole' ? 'selected' : '' %>>üõ£Ô∏è Pothole</option>
              <option value="garbage" <%= formData.category === 'garbage' ? 'selected' : '' %>>üóëÔ∏è Garbage</option>
              <option value="water_leakage" <%= formData.category === 'water_leakage' ? 'selected' : '' %>>üíß Water Leakage</option>
              <option value="streetlight" <%= formData.category === 'streetlight' ? 'selected' : '' %>>üí° Streetlight</option>
              <option value="public_safety" <%= formData.category === 'public_safety' ? 'selected' : '' %>>üö® Public Safety</option>
              <option value="infrastructure_damage" <%= formData.category === 'infrastructure_damage' ? 'selected' : '' %>>üèóÔ∏è Infrastructure Damage</option>
              <option value="other" <%= formData.category === 'other' ? 'selected' : '' %>>üìã Other</option>
            </select>
          </div>

          <div class="form-group">
            <label for="severity">Severity *</label>
            <select id="severity" name="severity" required>
              <option value="">Select severity</option>
              <option value="low" <%= formData.severity === 'low' ? 'selected' : '' %>>Low</option>
              <option value="medium" <%= formData.severity === 'medium' ? 'selected' : '' %>>Medium</option>
              <option value="high" <%= formData.severity === 'high' ? 'selected' : '' %>>High</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="image">Attach Image (optional)</label>
          <input id="image" name="image" type="file" accept="image/*">
          <p class="helper">Max 5MB. JPEG/PNG/GIF supported.</p>
        </div>

        <!-- Location capture -->
        <div class="form-group">
          <label>Location *</label>
          <div style="display:flex; gap:10px; align-items:center;">
            <button type="button" id="getLocationBtn" class="btn secondary">Get Location</button>
            <div id="locStatus" class="helper">No coordinates yet.</div>
          </div>
          <input type="hidden" id="latitude" name="latitude" value="<%= formData.latitude || '' %>">
          <input type="hidden" id="longitude" name="longitude" value="<%= formData.longitude || '' %>">
        </div>

        <div style="display:flex; gap:12px; margin-top:18px;">
          <button type="submit" class="btn">Submit Issue</button>
          <!-- Extra button with href as requested -->
          <a href="/issues" class="btn secondary" style="display:inline-flex;align-items:center;justify-content:center;">Back to All Issues</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const getLocBtn = document.getElementById('getLocationBtn');
    const locStatus = document.getElementById('locStatus');
    getLocBtn.addEventListener('click', () => {
      if (!navigator.geolocation) {
        locStatus.textContent = 'Geolocation not supported by your browser.';
        return;
      }
      locStatus.textContent = 'Getting location‚Ä¶';
      navigator.geolocation.getCurrentPosition((pos) => {
        const lat = pos.coords.latitude;
        const lon = pos.coords.longitude;
        document.getElementById('latitude').value = lat;
        document.getElementById('longitude').value = lon;
        locStatus.textContent = `Captured: ${lat.toFixed(5)}, ${lon.toFixed(5)}`;
      }, (err) => {
        console.error(err);
        locStatus.textContent = 'Could not get location. Allow location access and try again.';
      }, { enableHighAccuracy: true, timeout: 10000 });
    });
  </script>
</body>
</html>
